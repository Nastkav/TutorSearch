@using Infra.DatabaseAdapter.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Domain.Exceptions
@model Domain.Commands.UpdateRequestCommand

<div class="modal fade" id="updateStatus" tabindex="1" role="dialog" aria-labelledby="updateStatusLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Update" name="updateRequest">

                <div class="modal-header">
                    <h5 class="modal-title" id="updateStatusLabel">Відповісти на запит</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input asp-for="TutorId" id="tutorProfileId" class="form-control" type="hidden"/>
                    <div class="form-group">
                        <label asp-for="Id" class="form-label"></label>
                        <input asp-for="Id" id="rId" class="form-control" readonly></input>
                    </div>
                    <div class="form-group">
                        <label asp-for="From" class="form-label"></label>
                        <input asp-for="From" id="timeFrom" class="form-control" readonly></input>
                    </div>
                    <div class="form-group">
                        <label asp-for="To" class="form-label"></label>
                        <input asp-for="To" id="timeTo" class="form-control" readonly></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="TutorComment" class="form-label"></label>
                        <textarea asp-for="TutorComment"  id="tutorComment" class="form-control"></textarea>
                        <span asp-validation-for="TutorComment" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" class="form-check-label"></label>
                        <div class="list-group list-group-flush">
                            <div class="input-group">
                                <select asp-for="Status" class="form-select" id="status" asp-items="Html.GetEnumSelectList<LessonRequestStatus>()">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Скасувати</button>
                    <button type="submit" class="btn btn-primary">Підтвердити</button>
                </div>
            </form>
        </div>
    </div>
</div>
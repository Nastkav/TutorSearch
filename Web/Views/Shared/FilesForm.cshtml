@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Domain.Models.UserFile>

<div class="row"></div>
<div class="upload">
    <h4 class="row">Список файлів</h4>
    <div id="liveAlertPlaceholder"></div>
    <!-- Отримати всі файли з сервера -->
    <table class="table table-hover">
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <th scope="row">@item.FileName</th>
                <td>
                    <a type="button" class="btn btn-info"
                       asp-controller="Files" asp-action="Download" asp-route-id="@item.Id" target="_blank">
                        <i class="fa-solid fa-arrow-down"></i> Завантажити файл
                    </a>
                    <button type="button" class="btn btn-info" onclick="onclickFileDelete(this)"
                            asp-controller="Files" asp-action="Delete" data-filename="@item.Id">
                        <i class="fa-solid fa-x"></i> Видалити
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
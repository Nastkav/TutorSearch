@model dynamic

@{
    ViewBag.Title = "Search Tutor";
    Layout = "_Layout";
}
<div class="row mb-5">
    <div class="row mb-5"></div>
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>
<div class="container ">
    <div class="row mb-5">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn btn-primary " type="button" id="button-addon2">
                <i class="fa-solid fa-magnifying-glass"></i> Search Tutor
            </button>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <aside class="col-sm-3">
            <div class="card mb-3">
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Cost per hour </h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label>Min</label>
                                    <div class="input-group">
                                        <span class="input-group-text p-2">$</span>
                                        <input type="text" class="form-control" placeholder="0">
                                    </div>
                                </div>
                                <div class="form-group col-sm-6 text-right">
                                    <label>Max</label>
                                    <div class="input-group">
                                        <span class="input-group-text p-2">$</span>
                                        <input type="text" class="form-control" placeholder="99999">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
            <div class="card mb-3">
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Subjects</h6>
                    </header>
                    <div class="filter-content">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item">First Subject <span class="float-right badge text-dark round">142</span> </a>
                            <a href="#" class="list-group-item">Second Subject<span class="float-right badge text-dark round">12</span></a>
                        </div>
                    </div>
                </article>
            </div>
            <div class="card mb-3">
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Lesson Type </h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    OFFLINE
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                <label class="form-check-label" for="flexCheckChecked">
                                    <a class="fa fa-web"></a> ONLINE
                                </label>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </aside>
        <div class="col">
            <div class="card card-flex align-items-center bg-light mb-3">
                <div class="row g-0">
                    <div class="col-4">
                        <img class="img-fluid rounded-start"
                             src="~/img/example_face.jpg"
                             alt="..."/>
                    </div>
                </div>
                <div class="col">
                    <div class="card-body">
                        <div class="row card-title">
                            <div class="col lead">
                                <a class="stretched-link" asp-controller="TutorProfile" asp-action="Details" asp-route-id="1">
                                    Eunice Holt
                                </a>
                                <i class="fa fa-star"></i> 4.5 (23 reviews)
                            </div>
                            <div class="col text-end">
                                <span class="text-light bg-primary rounded-5 p-lg-2">30 $/hour</span>
                            </div>
                        </div>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <small class="text-muted"><i class="fa-solid fa-location-dot"></i> Kyiv, Sviatoshyn</small>
                        <div class="card-footer">
                            <span class="badge bg-secondary">Subject</span>
                            <span class="badge bg-success">Subject</span>
                            <span class="badge bg-info">Subject</span>
                            <span class="badge bg-light">Subject</span>
                            <span class="badge bg-dark">Subject</span>
                        </div>
                    </div>
                </div>
            </div>
